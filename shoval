import json
with open("special_characters.json", "r", encoding="utf-8") as file:
    special_characters = json.load(file) #עבודה על קובץ json

print(special_characters) #מדפיס את הקובץ כדי לראות את כל הסימנים

text = "hello shoval ☆ ✦"

def clean(text , special_characters):
    clean_text = " "
    found_emoji = False
    for sigh in text: #עובר על כל אות בטקסט
        if sigh in special_characters:
            found_emoji = True
        else: #במקרה אחר אם הסימן לא נמצא ברשימת אימוגים
            clean_text += sigh #אם הוא לא הוא יוסיך אותו לרשימה ריקה כדי שיהיה לנו רשימה חדשה בלי סימנים
    if found_emoji:
        print("in text have a emoji")
    return clean_text.strip()  #הדפסת הרשימה החדשה ללא רווחים מיותרים

